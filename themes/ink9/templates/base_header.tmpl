{#  -*- coding: utf-8 -*- #}
{% import 'base_helper.tmpl' as base with context %}

{% macro html_header() %}
    <header id="header">
        {{ html_site_title() }}
        {{ html_translation_header() }}
        {{ html_navigation_links() }}
        {% if search_form %}
            <div class="searchform" role="search">
                {{ search_form }}
            </div>
        {% endif %}
    </header>
    {{ template_hooks['page_header']() }}
{% endmacro %}

<img src="#" />

{% macro html_site_title() %}
    <h1 id="brand"><a href="{{ _link("root", None, lang) }}" title="{{ blog_title|e }}" rel="home">
    {% if logo_url %}
        <img src="{{ logo_url }}" alt="{{ blog_title|e }}" id="logo">
    {% endif %}

    {% if show_blog_title %}
        <span id="blog-title">{{ blog_title|e }}</span>
    {% endif %}
    </a></h1>
{% endmacro %}

{% macro html_navigation_links() %}
<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 menucontainer">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100 menubar">
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
            {{ html_navigation_links_entries(navigation_links) }}
        </ul>
    </div>
</div>
{% endmacro %}

{% macro html_navigation_links_entries(navigation_links_source) %}
    {% for url, text, icon in navigation_links_source[lang] %}
        {% if not text.startswith(" ") %}
        <li class="nav-item">
            <a href="{{ url }}" class="nav-link align-middle px-0">
                <i class="fs-4 {{ icon }}"></i> <span class="ms-1 d-none d-sm-inline">{{ text }}</span>
            </a>
        </li>
        {% else %}
        <li class="nav-item level2">
            <a href="{{ url }}" class="nav-link align-middle px-0">
                <i class="fs-6 {{ icon }}"></i> <span class="ms-1 d-none d-sm-inline">{{ text }}</span>
            </a>
        </li>
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro html_translation_header() %}
    {% if translations|length > 1 %}
        <div id="toptranslations">
            <h2>{{ messages("Languages:") }}</h2>
            {{ base.html_translations() }}
        </div>
    {% endif %}
{% endmacro %}
